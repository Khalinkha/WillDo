<div class="row">
    <div class="col-md-5">
        <div class="form-area">
            <br style="clear:both" />
            <h3 style="margin-bottom: 25px; text-align: center;">Contact Form</h3>

            <div class="form-group">
                <input type="text" class="form-control" id="header" name="header" placeholder="header" value="OVERSKRIFT" required>
            </div>

            <div class="form-group">
                <input type="text" class="form-control" id="name" name="name" placeholder="Name" value="Fornavn Efternavn" required>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="email" name="email" placeholder="Email" value="test@test.dk" required>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="mobile" name="mobile" placeholder="Mobile Number" value="12345678" required>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="subject" name="subject" placeholder="Subject" value="Emnefelt" required>
            </div>
            <div class="form-group">
                <textarea class="form-control" type="textarea" id="message" placeholder="Message" maxlength="140" rows="7">Her kan man skrive et eller andet ligegyldigt...</textarea>
            </div>
            <p>
                <input type="button" value="Save" id="Save" class="btn btn-primary pull-right" onclick="SaveForm()"  />
            </p>
        </div>
    </div>
</div>
<!-- /ko -->

<script type="text/javascript">
    function SaveForm() {
        var formData =
        {
            header: $("#header").val(),
            name: $("#name").val(),
            email: $("#email").val(),
            mobile: $("#mobile").val(),
            subject: $("#subject").val(),
            message: $("#message").val()
        };

        $.ajax({
            type: "POST",
            url: '@Url.Action("GenerateDocument", "Template")',
            data: formData,
            dataType: "json",
            success: function (result) {
                location.href = result;
            },
            error: function (ex) {
                alert(ex.responseText);
            }
        });
    }
</script>